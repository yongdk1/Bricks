@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    <style>
        body {
            text-align: center;
        }

        h5 {
            text-align: center;
            font-weight: bold;
        }


        .card {
            border: 1px solid grey;
            padding: 3px 10px;
            margin: auto;
            padding: 10px;
            width: 70px;
            height: 200px;
        }

        .logo {
            height: auto;
            width: 50%;
        }

        .card-body {
            text-align: center;
        }

        .col-md-4 {
            text-align: center;
        }

        .row {
            margin-top: 80px;
            margin-bottom: 80px;
            padding-left: 150px;
            padding-right: 150px;
        }

        a {
            color: #3395F0;
            text-align: left;
        }

        #myCarousel {
            position: relative;
            width: 100%;
        }


        .carouselImg {
            max-height: 400px;
            /*min-width: auto;*/
            width: 100%;
            opacity: 0.9;
        }

        .bg-1 {
            background: #2d2d30;
            color: #bdbdbd;
        }

        .thumbnail {
            padding: 0 0 15px 0;
            /*            border: none;*/
            border-radius: 0;
        }

            .thumbnail p {
                margin-top: 15px;
                color: #555;
            }

        .btn {
            padding: 10px 20px;
            background-color: #333;
            color: #f1f1f1;
            border-radius: 0;
            transition: .2s;
        }

            .btn:hover, .btn:focus {
                border: 1px solid #333;
                background-color: #fff;
                color: #000;
            }

        .financialCal {
            color: white;
        }

            .financialCal:hover {
                color: #000;
            }
    </style>
</head>

<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/img1.jpg" alt="Image1" width="1200" height="900" class="carouselImg">
                <div class="carousel-caption">
                    <h3>
                        FIND YOUR FIRST HOME
                    </h3>
                </div>
            </div>

            <div class="item">
                <img src="~/images/img2.jpg" alt="Image2" width="1200" height="900" class="carouselImg">
                <div class="carousel-caption">
                    <h3>
                        YOUR PERFECT HOME
                    </h3>
                </div>
            </div>

            <div class="item">
                <img src="~/images/bGRoom.jpg" alt="Image3" width="1200" height="900" class="carouselImg">
                <div class="carousel-caption">
                    <h3>
                        HOME IS ALWAYS THE MOST COSY HARBOR
                    </h3>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <form method="post">
        <!-- Container (3 buttons Section) -->
        <div>
            <div class="container">
                <div class="row text-center">
                    <div class="col-sm-4">
                        <div class="thumbnail">
                            <img src="~/images/buy-a-house.jpg" alt="Buy" width="400" height="300" />
                            <p><strong>Buying your Home</strong></p>
                            <p>Search for your Home</p>
                            <button class="btn" asp-controller="Buy" asp-action="BuyerSearch">Search</button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="thumbnail">
                            <img src="~/images/sell-house.jpg" alt="Sell" width="400" height="300" />
                            <p><strong>Selling your Home</strong></p>
                            <p>Know more about your Home</p>
                            <button class="btn" asp-controller="Sell" asp-action="SellerSearch">Search</button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="thumbnail">
                            <img src="~/images/caculate.jpg" alt="Financial Calculator" width="400" height="300">
                            <p><strong>Financial Caculator</strong></p>
                            <p>Calculate your affordability</p>
                            @*<a asp-controller="Financial" asp-action="Create">Calculate</a>*@
                            <button class="btn"><a asp-controller="Financial" asp-action="Create" class="financialCal">Calculate</a></button>
                            @*<button class="btn" method="GET" asp-controller="Financial" asp-action="Create">Calculate</button>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="bg-1">
        <div class="container">
            <div class="row text-center">
                <h3>Why Bricks?</h3>
                <br />
                <p>We provide the latest private property transaction records. </p>
                <p>We provide searches based on filters to provide you with specific private property transaction data.</p>
                <p>We offer a Financial Calculate to help you to calculate your affordability to better mange your finances.</p>
                <p>We are commited to provide you with the most up-to-date information. </p>
                <br />
                <p>Contact: 2006bricks@gmail.com</p>
            </div>
        </div>
    </div>
</body>
</html>
