@model BricksMeatballs.Models.FinancialModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .FinancialCal {
        background-position: 0% 50%;
        background-image: url('../../images/background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        height: 250px;
        width: 100%;
        position: relative;
        opacity: 0.7;
        padding: 7%;
        color: white;
        font-size: 40px;
        margin-bottom: 20px;
    }

    body {
        padding-top: 31px;
        padding-bottom: 80px;
    }

    .results {
        padding-left: 5%;
        padding-right: 5%;
    }

    h4 {
        font-weight: 700;
    }

    .panel {
        border: hidden;
    }

    hr {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .row {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>


<div class="FinancialCal">Financial Calculator</div>
<div class="container-fluid" style="margin-top: -50px">
    <div class="row">
        <br />
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="panel panel-primary panel-transparent">
                <div class="panel-body">
                    <div class='panel-heading panel-relative'>
                        <div class="results">
                            <hr />
                            <h4>Your Results</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Maximum House Price
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.CalculateTrueMax())
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Maximum Bank Loan
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.MaxBankLoan())
                                </dd>
                            </dl>
                        </div>
                        <div class="results">
                            <hr />
                            <h4>Financial Details</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Monthly Cash Available for Mortgage
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.MaxMonthlyPayment())
                                </dd>
                            </dl>
                            <dl class="row" style="margin-top: -10px">
                                <dt class="col-sm-6" style="font-weight: 400">
                                    TDSR Limit
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.TDSRLimit())
                                </dd>
                            </dl>
                            <dl class="row" style="margin-top: -10px">
                                <dt class="col-sm-6" style="font-weight: 400">
                                    MSR Limit (if applicable)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.MSRLimitDisplay()
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Maximum Loan-To-Value (LTV) Ratio
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.LTVDisplay()
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Deposit Required
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.CashCpfDownpayment())
                                </dd>
                            </dl>
                            <dl class="row" style="margin-top: -10px">
                                <dt class="col-sm-6" style="font-weight: 400">
                                    Minimum Cash Downpayment
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.CashDownpayment())
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    Buyer Stamp Duty (BSD)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.BSD())
                                </dd>
                            </dl>
                            <dl class="row" style="margin-top: -10px">
                                <dt class="col-sm-6">
                                    Additional Buyer Stamp Duty (ABSD) (if any)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.ABSD())
                                </dd>
                            </dl>
                        </div>
                        <div class="results">
                            <hr />
                            <h4>Your Details</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Age)
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Age)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Residency)
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Residency)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.NumProperties)
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.NumProperties)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.NumLoans)
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.NumLoans)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.MonthlyFixedIncome)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.MonthlyFixedIncome)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.MonthlyVariableIncome)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.MonthlyVariableIncome)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Cash)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.Cash)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Cpf)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.Cpf)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Credit)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.Credit)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.CarLoan)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.CarLoan)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.OtherHomeLoan)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.OtherHomeLoan)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.OtherLoan)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.DoubleDisplay(Model.OtherLoan)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.PropertyType)
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.PropertyType)
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.LoanTenure)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.LoanTenureDisplay()
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.InterestRate)
                                </dt>
                                <dd class="col-sm-6">
                                    @Model.InterestRateDisplay()
                                </dd>
                            </dl>
                        </div>
                        <div class="results">
                            <form asp-action="Edit">
                                @Html.HiddenFor(model => model.Age, new { Value = @Model.Age })
                                @Html.HiddenFor(model => model.Residency, new { Value = @Model.Residency })
                                @Html.HiddenFor(model => model.NumProperties, new { Value = @Model.NumProperties })
                                @Html.HiddenFor(model => model.NumLoans, new { Value = @Model.NumLoans })
                                @Html.HiddenFor(model => model.MonthlyFixedIncome, new { Value = @Model.MonthlyFixedIncome })
                                @Html.HiddenFor(model => model.MonthlyVariableIncome, new { Value = @Model.MonthlyVariableIncome })
                                @Html.HiddenFor(model => model.Cash, new { Value = @Model.Cash })
                                @Html.HiddenFor(model => model.Cpf, new { Value = @Model.Cpf })
                                @Html.HiddenFor(model => model.Credit, new { Value = @Model.Credit })
                                @Html.HiddenFor(model => model.CarLoan, new { Value = @Model.CarLoan })
                                @Html.HiddenFor(model => model.OtherHomeLoan, new { Value = @Model.OtherHomeLoan })
                                @Html.HiddenFor(model => model.OtherLoan, new { Value = @Model.OtherLoan })
                                @Html.HiddenFor(model => model.PropertyType, new { Value = @Model.PropertyType })
                                @Html.HiddenFor(model => model.LoanTenure, new { Value = @Model.LoanTenure })
                                @Html.HiddenFor(model => model.InterestRate, new { Value = @Model.InterestRate })
                                <div class="form-group button">
                                    <input type="submit" value="Make changes to my input" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>